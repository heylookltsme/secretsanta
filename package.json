{
  "name": "secretsanta",
  "version": "1.0.0",
  "description": "",
  "main": "src/secretsanta.ts",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "tsc --esModuleInterop --rootDir ./src/ --outDir ./dist/ ./src/secretsanta.ts",
    "santa-test": "yarn run build && node -r esm ./dist/secretsanta.js --test",
    "santa": "yarn run build node -r esm ./dist/secretsanta.js > secret-santa-assignments.txt"
  },
  "dependencies": {
    "twilio": "^3.9.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.10",
    "@types/twilio": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^6.6.0",
    "esm": "^3.2.25",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off"
    }
  }
}
